{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "./build",
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "**/*",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "bower.json",
      "database.rules.json",
      "firebase.json",
      "README.md"
    ],
    "headers": [
      {
        "source": "scripts/helper/util/service-worker-registration.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "service-worker.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ]
  }
}
